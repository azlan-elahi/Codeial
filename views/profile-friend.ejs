<link rel="stylesheet" href="/css/user_profile.css">
<div id="user-profile-div">
    <!-- <form action="/users/sign-out" method="GET"> -->
    </form>
    <h1>CodEial Profile Page!!</h1>

    <% if(user.id==profile_user.id){ %>
        <!-- If user matched show the form -->
        <form action="/users/update/<%= profile_user.id %>" method="POST">
            <input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name %>" required>
            <input type="email" name="email" placeholder="Your Email" value="<%= profile_user.email %>" required>
            <input type="submit" value="Update">
        </form>
        <% }else{ %>
            <!-- only show the profile info -->
            <h4>
                User Name: <%= profile_user.name %>
            </h4>
            <h4>
                User Email: <%= profile_user.email %>
            </h4>
            <% } %>
                <!-- <button type="submit" href="/create-session">Sign In</button> -->
</div>